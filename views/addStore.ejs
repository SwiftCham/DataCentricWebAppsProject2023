<script>
  $(document).ready(function() {
    $('#addStoreForm').submit(function(event) {
      event.preventDefault();
      var sid = $('#sid').val();
      var location = $('#location').val();
      var mgrid = $('#mgrid').val();
      $.ajax({
        url: '/stores/add',
        method: 'POST',
        data: {
          sid: sid,
          location: location,
          mgrid: mgrid
        },
        success: function(response) {
          console.log(response);
          window.location.reload();
        },
        error: function(error) {
          console.log(error);
        }
      });
    });
  });
</script>
<form id="addStoreForm" action="/stores/add" method="POST">
  <%- include('partials/navbar') %>
    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.min.js"></script>
    <% if (typeof error !== 'undefined') { %>
      <p><%= error %></p>
    <% } %>
    <div>
      <label for="sid">Store ID:</label>
      <input type="text" name="sid" required>
    </div>
    <div>
      <label for="location">Store Location:</label>
      <input type="text" name="location" min="1" required>
    </div>
    <div>
      <label for="mgrid">Manager ID:</label>
      <input type="text" name="mgrid" min="4" max="4" required>
    </div>
      <button type="submit" value="Add">Add Store</button>
  </form>
  