<script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('updateStoreForm');
      const locationInput = document.getElementById('location');
      const mgridInput = document.getElementById('mgrid');
      
      form.addEventListener('submit', function(e) {
        if (!locationInput.checkValidity()) {
          e.preventDefault(); // Prevent form submission
          alert(locationInput.validationMessage);
        }
        if (!mgridInput.checkValidity()) {
          e.preventDefault(); // Prevent form submission
          alert(mgridInput.validationMessage);
        }
      });
    });
</script>
<form id="updateStoreForm" action="/stores/<%= store.sid %>" method="POST">
    <%- include('partials/navbar') %>
    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.min.js"></script>
    <% if (typeof error !== 'undefined') { %>
        <p><%= error %></p>
      <% } %>
    <div>
        <label for="sid">Store ID:</label>
        <input type="text" id="sid" name="sid" value="<%= store.sid %>" readonly>
    </div>
    <div>
        <label for="location">Store Location:</label>
        <input type="text" id="location" name="location" min="1" value="<%= store.location %>" required>
    </div>
    <div>
        <label for="mgrid">Manager ID:</label>
        <input type="text" id="mgrid" name="mgrid" min="4" max="4" value="<%= store.mgrid %>" required>
    </div>
    <button type="submit">Update Store</button>
</form>
